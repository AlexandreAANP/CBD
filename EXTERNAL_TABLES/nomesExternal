CREATE TABLE nomes_ext (
    V_NOME VARCHAR2(20 CHAR)
)
ORGANIZATION EXTERNAL
(
    TYPE ORACLE_LOADER
    DEFAULT DIRECTORY def_dir1
    ACCESS PARAMETERS
    (RECORDS DELIMITED BY NEWLINE
        FIELDS(
            V_NOME CHAR(20)
        ))
        LOCATION('nomes')-- ficheiro que est√° na pasta external tables
)REJECT LIMIT UNLIMITED;

